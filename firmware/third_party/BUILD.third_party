load("@rules_foreign_cc//tools/build_defs:make.bzl", "make")

package(default_visibility = ["//visibility:public"])

load(
    "@avr-bazel//:avr.bzl",
    "avr_library",
    "avr_pure_library",
)

cc_library(
    name = "libelf",
    srcs = ["lib/libelf.a"],
    visibility = ["//visibility:private"],
    alwayslink = 1,
)

cc_library(
    name = "simavr",
    hdrs = glob(["include/simavr/**"]),
    strip_include_prefix = "include",
    srcs = ["lib/libsimavr.a"],
    deps = [":libelf"],
    alwayslink = 1,
)

# TODO: might be better to build from source in future.
make(
    name = "simavr_make",
    lib_source = "@simavr//:all",
    out_include_dir = "third_party/simavr",
    static_libraries = ["simavr.a"],
)

avr_pure_library(
    name = "simavr_avr_hdrs",
    hdrs = glob(["include/simavr/**"]),
)
