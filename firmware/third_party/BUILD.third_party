package(default_visibility = ["//visibility:public"])

cc_library(
    name = "libelf",
    srcs = ["lib/libelf.a"],
    visibility = ["//visibility:private"],
    alwayslink = 1,
)

cc_library(
    name = "simavr",
    hdrs = glob(["include/simavr/**"]),
    strip_include_prefix = "include",
    srcs = ["lib/libsimavr.a"],
    deps = [":libelf"],
    alwayslink = 1,
)
